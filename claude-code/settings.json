{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "showTurnDuration": true,
  "attribution": {
    "commit": "Co-Authored-By: Claude Sonnet 4.5 <noreply@anthropic.com>"
  },
  "statusLine": {
    "type": "command",
    "command": "/home/ortho/.config/home-manager/claude-code/statusline.sh"
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Claude Code' 'Claude needs your attention' -t 5000 -u normal && pw-play /usr/share/sounds/freedesktop/stereo/message-new-instant.oga >/dev/null 2>&1 &"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(home-manager switch)",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Home Manager' 'Configuration applied successfully! ðŸŽ‰' -t 5000 -u normal && pw-play /usr/share/sounds/freedesktop/stereo/complete.oga >/dev/null 2>&1 &"
          }
        ]
      },
      {
        "matcher": "Bash(home-manager build)",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Home Manager' 'Build completed successfully âœ“' -t 3000 -u low && pw-play /usr/share/sounds/freedesktop/stereo/complete.oga >/dev/null 2>&1 &"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "Bash(home-manager *)",
        "hooks": [
          {
            "type": "command",
            "command": "notify-send 'Home Manager' 'Build/switch failed! Check errors.' -t 5000 -u critical && pw-play /usr/share/sounds/freedesktop/stereo/dialog-error.oga >/dev/null 2>&1 &"
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Bash(alejandra:*)",
      "Bash(home-manager build:*)",
      "Bash(home-manager switch:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(ls:*)",
      "Read(*.nix)",
      "Read(*.lua)",
      "Read(*.sh)",
      "Read(*.json)",
      "Read(*.md)",
      "Read(~/Orthidian/transcripts/*)",
      "Bash(nix search:*)",
      "Bash(docker run --user * --rm --memory=20g -v *:/pipeline adaptogene:latest*:*)",
      "Bash(alejandra * && home-manager build:*)",
      "Bash(alejandra * && home-manager switch:*)"
    ],
    "ask": [
      "Bash(git push:*)",
      "Bash(git commit:*)"
    ]
  }
}
